{
    "logToFile": true,
    "logToAPI": true,

    "apiUrl": "https://timelapse-dev.azurewebsites.net/api/",
    "logFilePath": "/home/pi/logs/timelapse.log",

    "shutdown": false,
    "tempWarning": 50,

    "sleep_during_night": true,
